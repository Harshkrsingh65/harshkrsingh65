#include<stdio.h>
#include<conio.h>
main()
{
int i,j,n;
clrscr();
printf("Enter a number : "); // Specify that what is the role of this input on the program...
scanf("%d",&n); //semicolon was missing here.
for(i=1;i<=n;i++)
{
for(j=1;j<=n;j++)
